<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/id_msg_content_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/id_msg_content_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_msg_content_user_img"
        android:layout_marginLeft="10dp"

        android:text="把果实还给种子" />

    <TextView
        android:id="@+id/id_msg_content_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_msg_content_user_name"
        android:layout_alignLeft="@+id/id_msg_content_user_name"

        android:text="01:35" />

</RelativeLayout>
