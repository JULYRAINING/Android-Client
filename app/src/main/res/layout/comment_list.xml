<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"

    >

    <ImageView

        android:id="@+id/id_comment_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"

        />

    <TextView
        android:id="@+id/id_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/id_comment_img"
        android:paddingLeft="20dp"
        android:text="把果实还给种子" />

    <TextView
        android:id="@+id/id_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_comment_name"
        android:layout_alignLeft="@+id/id_comment_name"
        android:paddingLeft="20dp"
        android:text="9-24 12:10" />

    <TextView
        android:id="@+id/id_comment_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/id_comment_img"
        android:paddingTop="10dp"
        android:layout_alignLeft="@+id/id_comment_name"
        android:paddingLeft="20dp"
        android:text="无数据" />


</RelativeLayout>
