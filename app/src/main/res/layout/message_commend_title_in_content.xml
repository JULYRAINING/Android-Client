<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_commend_tile_linearlayout"


    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/msg_comment_title_stroke_back"
    android:divider="@drawable/comment_title_divider"
    android:orientation="horizontal"
    android:showDividers="middle">

    <TextView
        android:id="@+id/id_msg_comment_title_approve"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:gravity="center"
        android:text="赞" />

    <TextView
        android:id="@+id/id_msg_comment_title_comment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="评论" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="隐藏" />
</LinearLayout>

